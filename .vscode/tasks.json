{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run TicTacToe",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "${workspaceFolder}\\tictactoe.py"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run TicTacToe (debug)",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "-m", "debugpy",
        "--listen", "5678",
        "--wait-for-client",
        "${workspaceFolder}\\tictactoe.py"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "problemMatcher": []
    }
  ]
}
